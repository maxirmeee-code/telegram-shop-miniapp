{
  "version": 2,
  "builds": [
    { "src": "bot/index.js", "use": "@vercel/node" },
    { "src": "api/validate.js", "use": "@vercel/node" },
    { "src": "web/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/webhook", "dest": "bot/index.js" },
    { "src": "/api/validate", "dest": "api/validate.js" },
    { "src": "/", "dest": "/web/index.html" },
    { "src": "/(.*)", "dest": "/web/$1" },
    { "src": "/admin", "dest": "/web/admin.html" },
    { "src": "/products.json", "dest": "/web/products.json" }
  ]
}